{
  "name": "hatch-crm",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:migrate": "pnpm --filter @hatch/db migrate",
    "db:seed": "pnpm --filter @hatch/db seed",
    "ci": "turbo run lint test build"
  },
  "devDependencies": {
    "next": "^14.2.10",
    "turbo": "^1.13.4",
    "typescript": "^5.5.4"
  }
}
