{
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "apps/api/dist/**",
        "excludeFiles": "apps/api/src/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "has": [
        {
          "type": "host",
          "value": "hatch-site.vercel.app"
        }
      ],
      "dest": "https://hatch-site-api.vercel.app/api/$1"
    },
    {
      "src": "/api/(.*)",
      "has": [
        {
          "type": "host",
          "value": "findyourhatch.com"
        }
      ],
      "dest": "https://hatch-site-api.vercel.app/api/$1"
    },
    {
      "src": "/api/(.*)",
      "has": [
        {
          "type": "host",
          "value": "www.findyourhatch.com"
        }
      ],
      "dest": "https://hatch-site-api.vercel.app/api/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    }
  ]
}
