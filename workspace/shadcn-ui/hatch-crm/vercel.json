{
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "apps/api/dist/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "has": [
        { "type": "host", "value": "hatch-site-api.vercel.app" }
      ],
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "has": [
        { "type": "host", "value": "api.findyourhatch.com" }
      ],
      "dest": "api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    }
  ]
}
